generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Utilisateur {
  id    Int     @id @default(autoincrement())
  email String  @unique
  motDePasse  String
  prenom  String
  nom  String
  ville  String?
  cp  String?
  rue  String?
  description  String? 
  dateInscription  DateTime
  rolesUtilisateurs RoleUtilisateur[]
  lesAnnonces Annonce[]
}

model Role {
  id Int @id
  nom String?
  rolesUtilisateurs RoleUtilisateur[]
}

model RoleUtilisateur {
  utilisateur Utilisateur @relation(fields: [utilisateurId], references: [id])
  utilisateurId Int 
  role Role @relation(fields: [roleId], references: [id])
  roleId Int 

  @@id([utilisateurId, roleId])
}

model Photo {
  id Int @id
  cheminPhoto String
  annonce Annonce @relation(fields: [annonceId], references: [id])
  annonceId Int
}

model Annonce {
  id Int @id
  description String
  datePublication DateTime
  auteur Utilisateur @relation(fields: [auteurId], references: [id])
  auteurId Int
  plante Plante @relation(fields: [planteId], references: [id])
  planteId Int
  photos Photo[]
}

model Plante {
  id    Int     @id @default(autoincrement())
  libelle String  @unique
  description  String 
  categoriesPlantes CategoriePlante[]
  annonces Annonce[]
}

model Categorie {
  id    Int     @id @default(autoincrement())
  libelle String  @unique
  categoriesPlantes CategoriePlante[]
}

model CategoriePlante {
  plante Plante @relation(fields: [planteId], references: [id])
  planteId Int 
  categorie Categorie @relation(fields: [categorieId], references: [id])
  categorieId Int 

  @@id([planteId, categorieId])
}